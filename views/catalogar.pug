doctype html
html(lang="pt-BR")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Duran Duran | Página Inicial
        link(rel="stylesheet", href="/style.css")
    body 
        header
            img(src="/logo.svg", alt="logo", width="100")
        nav 
            a(href="/") Página Inicial 
        main 
            form(method="POST", action="/produto")
                input(type="text", name="nome", placeholder="nome", maxlength="50", minlength="5")
                input(type="text", name="marca", placeholder="marca", maxlength="50", minlength="3")
                input(type="number", name="preco" , placeholder="preço", min="5", step="0.01")
                input(type="text", name="imagem", , placeholder="ULR imagem")
                input(type="submit", value="catalogar")
                